@model Book

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2>Xác Nhận Xóa Sách</h2>
        </div>
        <div class="card-body">
            <h3>Bạn có chắc chắn muốn xóa sách sau?</h3>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="@Model.Title" class="img-fluid rounded" />
                    }
                    else
                    {
                        <div class="alert alert-secondary">Không có hình ảnh</div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Mã Sách</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Tiêu Đề</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Tác Giả</dt>
                        <dd class="col-sm-9">@Model.Author</dd>

                        <dt class="col-sm-3">Giá Bán</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("N0") VNĐ</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Xóa Sách</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>